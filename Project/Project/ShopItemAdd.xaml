<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.ShopItemAdd">
    
        <StackLayout Margin="20">
            <Entry x:Name="titleField" Placeholder="Enter title"/>
            <Entry x:Name="descField" Placeholder="Enter desc" HeightRequest="200"/>
            <Entry x:Name="imageField" Placeholder="Enter image" TextChanged="imageField_TextChanged"/>
            <Entry x:Name="priceField" Placeholder="Enter price"/>
            <Button Text="Add item" Clicked="AddItemButton"/>
        </StackLayout>
    
</ContentPage>