<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.ItemDetailPage">
    <StackLayout Margin="20">
        <Label Text="Title:" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Title}" FontSize="16"/>

        <Label Text="Description:" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Desc}" FontSize="16"/>

        <Label Text="Image URL:" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Image}" FontSize="16"/>

        <Label Text="Price:" FontAttributes="Bold" FontSize="20"/>
        <Label Text="{Binding Price}" FontSize="16"/>

        <Button Text="Delete" Clicked="Button_Clicked"  BackgroundColor="#FF0000" TextColor="White" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>