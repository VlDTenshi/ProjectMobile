                </StackLayout>
            </Frame>
        </RelativeLayout>
        <Label x:Name="viewResult" Text="" FontSize="25" HorizontalOptions="Center" TextColor="#333" Margin="0,0,0,50"/>
    </StackLayout>

</ContentPage>
